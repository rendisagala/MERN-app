<!DOCTYPE html>
<html lang="en">
  <head>
    <% for (let i =0; i <username.length; i++) { %>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>TaskHelper - <%= username[i] %> </title>
    <link rel="stylesheet" href="css/style.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <link
      href="http://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.3.0/css/font-awesome.css"
      rel="stylesheet"
      type="text/css"
    />
    <link
      rel="stylesheet"
      href="https://use.fontawesome.com/releases/v5.13.0/css/all.css"
    />
    <style></style>
  </head>
  <body>
    <nav class="navbar navbar-light" style="background-color: #eee">
      <span class="navbar-brand mb-0 h1 px-2"
        > Welcome,<strong>    
          <%= username[i] %>
        </strong>!<% } %>
      </span>
      <form class="form-inline px-2" method="PUT" action="/logout">
        <button class="btn btn-outline-success" type="submit">Log Out</button>
      </form>
    </nav>
    <section class="vh-100 full-height" style="background-color: #eee">
      <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
          <div class="col col-lg-9 col-xl-7">
            <div class="card rounded-3">
              <div class="card-body p-4">
                <h4 class="text-center my-3 pb-3 brand-wrapper">TaskHelper.</h4>

                <form
                  class="row row-cols-lg-auto g-3 justify-content-center align-items-center mb-4 pb-2" method="POST" action="/addtask"
                >
                  <div class="col-12">
                    <div class="form-outline">
                      <input type="text" id="task" for="task" class="form-control" name="task"/>
                      <label class="form-label" for="form1"
                        >Enter a task here</label
                      >
                    </div>
                  </div>

                  <div class="col-12">
                    <button type="submit" class="btn btn-primary mb-lg-4"  >
                      Save
                    </button>
                  </div>

                 
                </form>

                <table class="table mb-4">
                 
                  <thead>
                    <tr>
                      <th scope="col">Date</th>
                      <th scope="col">Todo item</th>
                      <th scope="col">Status</th>
                      <th scope="col">Actions</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% for (let i =0; i <data.length; i++) { %>
                    <tr>
                      <th scope="row"> <%= data[i].date %></th>
                      <td> <%= data[i].name %></td>
                      <td> <%= data[i].status %></td>
                     
                      <td>
                        <div class="row">
                        <form action="/removetask" method="POST" class="col-4">
                        <button type="submit" class="btn btn-danger" formaction="/removetask">
                          Delete
                        </button></form>
                        <form action="/finishtask" method="POST" class="col-4">
                        <button type="submit" class="btn btn-success" formaction="/finishtask">
                          Finished
                        </button></form></div>
                      </td>
                    </tr>
                     <% } %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
    <script src="js/main.js"></script>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
